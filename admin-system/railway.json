{
  "$schema": "https://railway.com/railway.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "outputDirectory": "dist"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "npx serve -s dist -l $PORT"
  }
}
